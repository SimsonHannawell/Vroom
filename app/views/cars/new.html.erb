<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" %>
<%= javascript_include_tag "https://cdn.jsdelivr.net/npm/flatpickr" %>
<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" %>
<%= javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" %>

<!-- Navbar -->
<div class="navbar d-flex justify-content-between align-items-center px-3 py-2 border-bottom bg-white">
  <div class="logo-and-search d-flex align-items-center gap-3">
    <%= link_to root_path do %>
  <%= image_tag "vroom logo.jpg", class: "logo" %>
<% end %>

    <div class="search-bar d-flex gap-2">
      <input type="text" class="form-control" placeholder="Where">
      <input type="text" id="check-in" class="form-control" placeholder="Check in">
      <input type="text" id="check-out" class="form-control" placeholder="Check out">

      <!-- Time Dropdown -->
      <div class="dropdown">
        <button class="btn btn-outline-secondary dropdown-toggle form-control text-start" type="button" id="timeDropdown" data-bs-toggle="dropdown" aria-expanded="false">
          Select Time
        </button>
        <ul class="dropdown-menu" aria-labelledby="timeDropdown">
          <% ["08:00", "09:00", "10:00", "11:00", "12:00", "13:00", "14:00", "15:00", "16:00", "17:00"].each do |time| %>
            <li><a class="dropdown-item" href="#" onclick="selectTime('<%= time %>')"><%= time %></a></li>
          <% end %>
        </ul>
        <input type="hidden" id="selected-time" name="time">
      </div>
    </div>
  </div>

  <div class="top-buttons d-flex gap-2">
    <%= link_to "Manage Booking", bookings_path, class: "btn btn-outline-dark" %>
    <%= link_to "Sign in", "#", class: "btn btn-outline-dark" %>
  </div>
</div>


<%= simple_form_for @car, html: { class: 'container mt-5' } do |f| %>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Form Heading -->
      <div class="text-center mb-4">
        <h2 class="text-danger">List Your Car for Lending</h2>
      </div>

      <!-- Make Field -->
      <div class="form-group">
        <%= f.input :make, label: "Car Make", input_html: { class: "form-control", placeholder: "Enter car make" } %>
      </div>

      <!-- Model Field -->
      <div class="form-group">
        <%= f.input :model, label: "Car Model", input_html: { class: "form-control", placeholder: "Enter car model" } %>
      </div>

      <!-- Year Field -->
      <div class="form-group">
        <%= f.input :year, label: "Car Year", hint: "e.g. 2021", input_html: { class: "form-control", placeholder: "Enter car year" } %>
      </div>

      <!-- Fuel Type Field -->
      <div class="form-group">
        <%= f.input :fuel_type, label: "Fuel Type", collection: ['Petrol', 'Diesel', 'Electric', 'Hybrid'], prompt: 'Select fuel type', input_html: { class: "form-control" } %>
      </div>

      <!-- Transmission Field -->
      <div class="form-group">
        <%= f.input :transmission, label: "Transmission", collection: ['Automatic', 'Manual'], prompt: 'Select transmission type', input_html: { class: "form-control" } %>
      </div>

      <!-- Color Field -->
      <div class="form-group">
        <%= f.input :color, label: "Car Color", input_html: { class: "form-control", placeholder: "Enter car color" } %>
      </div>

      <!-- Price per Day Field -->
      <div class="form-group">
        <%= f.input :price_per_day, label: "Price per Day (£)", input_html: { class: "form-control", placeholder: "Enter price per day" } %>
      </div>

      <!-- Description Field -->
      <div class="form-group">
        <%= f.input :description, label: "Description", as: :text, input_html: { class: "form-control", placeholder: "Provide a detailed description of the car" } %>
      </div>

      <!-- Submit Button -->
      <div class="form-group text-center">
        <%= f.button :submit, "List Car", class: "btn btn-danger btn-lg" %>
      </div>
    </div>
  </div>
<% end %>
