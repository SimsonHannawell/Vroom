<%= render "shared/navbar" %>

<div class="container mt-5">
  <% if user_signed_in? %>
    <div class="text-center mb-4">
      <h2 class="text-danger">List Your Car for Lending</h2>
    </div>

    <%= simple_form_for @car, html: { multipart: true, id: "car-form" } do |f| %>
      <div class="row">
        <!-- Left Column -->
        <div class="col-md-6">
          <%= f.input :make, required: true, input_html: { class: "required-field" } %>
          <%= f.input :model, required: true, input_html: { class: "required-field" } %>
          <%= f.input :year, required: true, hint: "e.g. 2021", input_html: { class: "required-field" } %>
          <%= f.input :fuel_type, required: true, collection: ['Petrol', 'Diesel', 'Electric', 'Hybrid'], prompt: 'Select fuel type', input_html: { class: "required-field" } %>
          <%= f.input :transmission, required: true, collection: ['Automatic', 'Manual'], prompt: 'Select transmission type', input_html: { class: "required-field" } %>
        </div>

        <!-- Right Column -->
        <div class="col-md-6">
          <%= f.input :color, required: true, input_html: { class: "required-field" } %>
          <%= f.input :price_per_day, required: true, label: "Price per Day (Â£)", input_html: { class: "required-field" } %>
          <%= f.input :description, required: true, as: :text, input_html: { rows: 3, class: "required-field" } %>

          <%= f.label :images, "Upload Images (optional, up to 10)" %>
          <%= f.file_field :images, multiple: true, direct_upload: true, class: "form-control", accept: "image/*", id: "image-upload" %>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="form-group text-center mt-4">
        <%= f.button :submit, "List Car", class: "btn btn-danger btn-lg px-5", disabled: true, id: "submit-button" %>
      </div>
    <% end %>

    <!-- Validation script here... -->
    <script>
      // Same JavaScript as before...
    </script>

  <% else %>
    <div class="text-center mt-5">
      <h2 class="text-secondary">Please Sign In to List Your Car</h2>
      <p class="lead">You need to be logged in to lend your vehicle.</p>
      <%= link_to "Sign In", new_user_session_path, class: "btn btn-primary btn-lg" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-primary btn-lg ml-2" %>
    </div>
  <% end %>
</div>
