<%= render "shared/navbar" %>

<div class="container w-75 p-3">
  <h3>12 Matches in your area</h3>

  <!-- Grid Container -->
  <div class="card-grid">
    <% @cars.each do |car| %>
      <%= link_to car_path(car), class: "card-link-wrapper" do %>
        <div class="card">
          <div class="card-top">
            <h2><strong><%= "#{car.make} #{car.model}" %></strong></h2>
          </div>

          <div class="card-image">
            <%= image_tag "pagani.jpg", alt: "#{car.make} image" %>
          </div>

          <div class="card-bottom">
            Year: <%= car.year %>, Fuel: <%= car.fuel_type %>, Transmission: <%= car.transmission %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
